<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>PrimeFaces FileUpload Filter</filter-name>
        <filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
        <init-param>
            <param-name>thresholdSize</param-name>
            <param-value>51200</param-value>
        </init-param>
        <init-param>
            <param-name>uploadDirectory</param-name>
            <param-value>/opt/lib/</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>PrimeFaces FileUpload Filter</filter-name>
        <servlet-name>Faces Servlet</servlet-name>
    </filter-mapping>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Production</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>home</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>Constraint1</display-name>
        <web-resource-collection>
            <web-resource-name>empleados</web-resource-name>
            <description/>
            <url-pattern>/faces/empleados/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>departamentos</web-resource-name>
            <description/>
            <url-pattern>/faces/departamentos/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>catDp</web-resource-name>
            <description/>
            <url-pattern>/faces/catDp/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>deducPresta</web-resource-name>
            <description/>
            <url-pattern>/faces/deducPresta/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>deptosMov</web-resource-name>
            <description/>
            <url-pattern>/faces/deptosMov/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
