            <description/>
            <url-pattern>/faces/detEmpleado/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>movDp</web-resource-name>
            <description/>
            <url-pattern>/faces/movDp/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>observaciones</web-resource-name>
            <description/>
            <url-pattern>/faces/observaciones/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>otrosMovDp</web-resource-name>
            <description/>
            <url-pattern>/faces/otrosMovDp/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>parametros</web-resource-name>
            <description/>
            <url-pattern>/faces/parametros/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>/faces/planilla/*</web-resource-name>
            <description/>
            <url-pattern>/faces/planilla/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
